{
  "macros": [
    {
      "name": "test_macro",
      "programs": ["notepad.exe", "calc.exe"],
      "hotkey": "q+e",
      "stop_key": "<esc>",
      "actions": [
        {"keyboard": "a"},
        {"wait": 0.2},
        {"repeat": {"count": 2, "action": {"keyboard": "b"}}},
        {"loop": {"count": 2, "actions": [
          {"keyboard": "c"},
          {"wait": 0.1},
          {"keyboard": "d"}
        ]}},
        {"loop": {"count": 0, "actions": [
          {"keyboard": "e"},
          {"wait": 0.05}
        ]}}
      ]
    },
    {
      "name": "mouse_macro",
      "programs": ["chrome.exe", "notepad.exe"],
      "hotkey": "w",
      "stop_key": "<esc>",
      "actions": [
        {"mouse": "x1"},
        {"mouse": "x2"}
      ]
    },
    {
      "name": "mouse_macro2",
      "programs": ["chrome2.exe"],
      "hotkey": "<ctrl>+c",
      "stop_key": "<esc>",
      "actions": [
        {"mouse": "right"},
        {"mouse": "left"},
        {"mouse": "middle"},
        {"mouse": "x"},
        {"mouse": "x2"},
        {"mouse": "wheel_up", "amount": 3},
        {"mouse": "wheel_down", "amount": 2},
        {"wait": 0.2},
        {"repeat": {"count": 2, "action": {"keyboard": "a"}}},
        {"loop": {"count": 3, "actions": [
          {"keyboard": "w"},
          {"wait": 0.05},
          {"keyboard": "s"}
        ]}},
        {"loop": {"count": 0, "actions": [
          {"keyboard": "d"},
          {"wait": 0.05}
        ]}}
      ]
    }
  ]
}
